// Test: String interpolation in methods
// Strings with {expr} are converted to format!() macro

struct Person {
    name: string
    age: i32

    // Method using string interpolation with self fields
    fn greeting() {
        return "Hello, my name is {self.name}"
    }

    // Method with multiple interpolations
    fn describe() {
        return "Person: {self.name}, Age: {self.age}"
    }

    fn new(name, age) {
        return Person { name: name, age: age }
    }
}

struct Rectangle {
    width: i32
    height: i32

    fn area() {
        return self.width * self.height
    }

    fn describe() {
        return "Rectangle {self.width}x{self.height}"
    }
}

fn main() {
    person = Person.new("Alice", 30)
    print(person.greeting())
    print(person.describe())

    rect = Rectangle { width: 10, height: 5 }
    print(rect.describe())
    print(rect.area())
}
