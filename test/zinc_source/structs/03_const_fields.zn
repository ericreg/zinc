// Test: Const fields (immutable after initialization)

struct Config {
    const max_retries: 3       // const with default value
    const timeout: 30          // const with default value
    const api_version: string  // const with explicit type (set-once)
    name: string               // regular mutable field
}

struct Circle {
    const pi: 3.14159   // const float
    radius: f64         // mutable field
}

fn main() {
    // Create config - const fields use defaults or must be set once
    cfg = Config {
        api_version: "v1.0"
        name: "my_app"
    }

    print(cfg.max_retries)
    print(cfg.timeout)

    // Create circle
    circle = Circle { radius: 5.0 }
    print(circle.radius)
}
