// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/cpp
{
	"name": "Antlr4",
	"build": {
		"dockerfile": "Dockerfile"
	},
	// Bind mount your host source into the container
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",
	// Mount the zsh_history file to persist history between container restarts
	"mounts": [
		"source=${localWorkspaceFolder}/.devcontainer/zsh_history,target=/root/.zsh_history,type=bind"
	],
	"runArgs": [
		"--network=host",
		"--memory=4g"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"mike-lischke.vscode-antlr4",
				"streetsidesoftware.code-spell-checker",
				"ms-python.debugpy",
				"Anthropic.claude-code"
			]
		}
	}
}